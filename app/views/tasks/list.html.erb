<h1>My tasks</h1>
<ul style="list-style: none;">
  <% @tasks.each do |task| %>
  <% if task.completed %>
    <li><input type="checkbox" checked><%= link_to task.title, task_path(task) %></li>
  <% else %>
    <li><input type="checkbox" ><%= link_to task.title, task_path(task) %></li>
  <% end %>
    <%= link_to "Delete task", delete_task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>
<%= link_to "Add new task", tasks_new_path %>
